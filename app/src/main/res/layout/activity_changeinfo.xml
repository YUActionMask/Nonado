<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_bear"></ImageView>

    <Button
        android:id="@+id/imageUpload_btn"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:text="사진등록"
        android:textColor="#212121"
        tools:ignore="TextContrastCheck" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#753800"
            android:text="@string/id_text"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/showid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:minHeight="48dp"
            android:importantForAutofill="no"
            android:inputType="none" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#753800"
            android:layout_weight="1"
            android:text="@string/pw_text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/changepw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:hint="변경할 비밀번호를 입력하세요."
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck"
            android:importantForAutofill="no" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#753800"
            android:layout_weight="1"
            android:text="email : "
            android:textAlignment="center" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:hint="변경할 이메일을 입력하세요."
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Nmber : "
            android:textColor="#753800"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:hint="변경할 연락처를 입력하세요."
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="GPS : "
            android:textColor="#753800"
            android:textAlignment="center" />


        <Button
            android:id="@+id/local_amend_btn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbutton"
            android:text="위치 수정"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/amend_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/roundbutton"
            android:text="수정 완료"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
            />

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="로그아웃"
            tools:ignore="TouchTargetSizeCheck"
            />

        <Button
            android:id="@+id/signout_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="회원탈퇴"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
            style="?android:attr/buttonBarButtonStyle"
            />
    </LinearLayout>
</LinearLayout>